node {

}

node {
    timestamps {

        stage('Deploy Membership-db to Test Environment') {

                        sh 'ssh -t root@172.104.147.135 rm -f flyway \\&&'
                        sh 'ssh -t root@172.104.147.135 ln -s /usr/local/bin/flyway-4.2.0/flyway /usr/local/bin/flyway \\&&'
                        sh 'ssh -t root@172.104.147.135 rsync -avzh --stats /var/membership-db /var/ofi_backups/membership-db \\&&'
                        sh 'rsync -avhm --stats /var/lib/jenkins/Deploy/membership-db/* root@172.104.147.135:/var/membership-db'
                        sh 'ssh -t root@172.104.147.135 \'cd /var/membership-db/deploy/ ./updatedb iznes\''

            }


        stage('Deploy Frontend to Staging Environment') {

                sh '''
                        ssh root@172.104.147.135 rsync -avzhm --stats /var/www_setltestnet/ /var/ofi_backups/www_setltestnet &&
                        rsync -avhm --stats /var/lib/jenkins/Deploy/dist/*  root@172.104.147.135:/var/www_setltestnet'''

            }

        stage('Deploy Backend to Staging Environment') {

                sh '''
                        ssh root@172.104.147.135  rsync -avzhm --stats --exclude 'node_modules' /var/phpapps/backend/ /var/ofi_backups/backend &&
                        rsync -avhm --stats --exclude 'config.json' /var/lib/jenkins/Deploy/backend/*  root@172.104.147.135:/var/phpapps/backend'''
            }



        stage('Deploy French Fund Daemon to Staging Environment') {

                sh '''
                            ssh root@172.104.147.135 rsync -avzhm --stats /var/phpapps/frenchfunddaemon /var/ofi_backups/frenchfunddaemon &&
                            rsync -avhm --stats /var/lib/jenkins/Deploy/ffdaemon/*  root@172.104.147.135:/var/phpapps/frenchfunddaemon'''
            }

        stage('Deploy French Fund Daemon to Staging Environment') {

                sh '''
                            ssh root@172.104.147.135 rsync -avzhm --stats /var/phpapps/daemon-node /var/ofi_backups/daemon-node &&
                            rsync -avhm --stats /var/lib/jenkins/Deploy/daemon-node/*  root@172.104.147.135:/var/phpapps/daemon-node'''
            }


        stage('Update Dependencies') {
            sh 'ssh -t root@172.104.147.135 \'cd /var/phpapps/backend/ ; bash && npm install\''
        }

        stage('Update database') {
            sh 'ssh -tt root@172.104.147.135 \'cd /var/membership-db/deploy/ && ./updatedb iznes \''
        }


        stage('Deploy Blockchain jars to Test Environment') {

                sh '''
                        rsync -avhmp --stats /var/lib/jenkins/Deploy/blockchain/scripts/*  root@172.104.147.135: &&
                        ssh -t root@172.104.147.135 \'cd /root ; bash &&  ./stop_blockchain.sh \'
                        ssh -t root@172.104.147.135 rm -f /usr/local/jar/*.jar &&
                        ssh -t root@172.104.147.135 rm -f /usr/local/jar/cmdtools &&
                        ssh -t root@172.104.147.135 rm -f /usr/local/jar/wallnode &&
                        ssh -t root@172.104.147.135 rm -f /usr/local/jar/valnode &&
                        rsync -avhm --stats /var/lib/jenkins/Deploy/blockchain/*.jar  root@172.104.147.135:/usr/local/jar &&
                        ssh -t root@172.104.147.135 \'cd /root ; bash && ./relink.sh \' &&
                        ssh -t root@172.104.147.135 \'cd /root ; bash && ./start_blockchain.sh \''''

            }


        stage('Restart Node Server') {
            sh 'ssh -t root@172.104.147.135 \'cd /var/phpapps ; bash && supervisorctl restart node_server\''
        }

        stage('Check node server is running') {
            sh 'ssh -t root@172.104.147.135 \'cd /var/phpapps/backend/ ; bash && node checkServer.js\''
        }
    }
}


