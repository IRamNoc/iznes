
node {

}
def notifySlack(String buildStatus = 'STARTED') {
    // Build status of null means success.
    buildStatus = buildStatus ?: 'SUCCESS'

    def color

    if (buildStatus == 'STARTED') {
        color = '#0000CD'
    } else if (buildStatus == 'SUCCESS') {
        color = '#008000'
    } else if (buildStatus == 'UNSTABLE') {
        color = '#FFFF00'
    } else {
        color = '#FF0000'
    }
    def msg = "${buildStatus}: `${env.JOB_NAME}` #${env.BUILD_NUMBER}:\n${env.BUILD_URL}"
    slackSend(channel : "opencsdfrontenddev", color: color, message: msg)
}

node {
    timestamps {
        try {
            notifySlack()

            stage('Deploy Frontend to Prod Environment'){
                node{
                    sh '''
              ssh jenkins@prod.iznes.io sudo mv /var/www_setltestnet/ /var/www_setltestnet_$(date +%F-%H:%M) &&
              ssh jenkins@prod.iznes.io sudo mkdir /var/www_setltestnet && 
              ssh jenkins@prod.iznes.io sudo chown -R jenkins:jenkins /var/www_setltestnet &&
              scp -pr /var/lib/jenkins/Deploy/dist/*  jenkins@prod.iznes.io:/var/www_setltestnet'''
                }
            }
            stage('Deploy Backend to Prod Environment') {
                node {
                    sh '''
                            ssh -t jenkins@prod.iznes.io sudo mv /var/phpapps/backend /var/phpapps/backend_$(date +%F-%H:%M) &&
                            ssh -t jenkins@prod.iznes.io sudo mkdir /var/phpapps/backend && 
                            ssh jenkins@prod.iznes.io sudo chown -R jenkins:jenkins /var/phpapps &&
                            scp -pr /var/lib/jenkins/Deploy/backend/*  jenkins@prod.iznes.io:/var/phpapps/backend'''
                }
            }

            stage ('Update Dependencies'){
                sh 'ssh -t jenkins@prod.iznes.io \'cd /var/phpapps/backend/ ; bash && npm install\''
            }

            stage ('Restart Node Server'){
                sh 'ssh -t jenkins@prod.iznes.io \'cd /var/phpapps ; bash && sudo supervisorctl restart node-server\''
            }

        } catch (e) {
            currentBuild.result = 'FAILURE'
            throw e
        } finally {
            notifySlack(currentBuild.result)
        }
    }
}
